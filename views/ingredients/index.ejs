
<div id="ingredients-window">
    <h1>Add Ingredients</h1>
    <ul id="ingredient-list">
        <% ingredients.forEach(ingredient => { %>
            <li>

                <form action="/ingredients/remove/user/<%= ingredient._id %>?_method=PUT" method="POST" class="ingredients" id="removeIngredient">
                    <input type="submit" value="<%= ingredient.name %>" />
                </form>

            </li>
        <% }) %>
    </ul>
    <form action="/ingredients/add/user?_method=PUT" method="POST" id="addIngredient">
        <input type="text" name="addedIngredient" />
        <input type="submit" value="Add Ingredient" />
    </form>
   <a id="reciplease" href="/recipes/find">Reciplease!</a>

</div>


